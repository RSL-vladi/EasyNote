<Window x:Class="EasyNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyNote"
        mc:Ignorable="d"
        Title="EasyNote" Height="450" Width="800" Background="#282828"
        Icon="Resources/EasyNoteLogo.ico">

    <Grid>
        <DockPanel Background="#383838" Width="240" HorizontalAlignment="Left" LastChildFill="False">
            <Button Width="220" Height="50" Margin="10,20,10,0" DockPanel.Dock="Top" Background="Transparent" BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder" Background="Transparent" CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/Home.png" Width="30" Height="30" Margin="10"/>
                                <TextBlock Text="Home" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#484848"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#585858"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Width="220" Height="50" Margin="10,0,10,0" DockPanel.Dock="Top" Background="Transparent" BorderThickness="0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder" Background="Transparent" CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Resources/Search.png" Width="30" Height="30" Margin="10"/>
                                <TextBlock Text="Search" FontSize="16" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#484848"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#585858"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </DockPanel>
    </Grid>
</Window>








